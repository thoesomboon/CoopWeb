            $("#NextSystemDateTH").val(data.NextSystemDateTH);
            $("#NextWorkingDayTH").val(data.NextWorkingDayTH);
            //$("#SystemDateDateTH").val(conversion.DateInBE(data.StartDate));
        }
        $("#SystemDateTH").keyup(function (e) {
            //debugger
            if (event.keyCode === 13) {
                e.preventDefault();
                var strDate = this.value;
                if (strDate != null)
                    if (!validation.isValidDateTH(strDate)) {
                        alert("วันที่ไม่ถูกต้อง โปรดตรวจสอบ");
                        this.focus();
                    }
            }
        })
        $("#NextSystemDateTH").keyup(function (e) {
            //debugger
            if (event.keyCode === 13) {
                e.preventDefault();
                var strDate = this.value;
                if (strDate != null)
                    if (!validation.isValidDateTH(strDate)) {
                        alert("วันที่ไม่ถูกต้อง โปรดตรวจสอบ");
                        this.focus();
                    }
            }
        })
        $("#NextWorkingDayTH").keyup(function (e) {
            //debugger
            if (event.keyCode === 13) {
                e.preventDefault();
                var strDate = this.value;
                if (strDate != null)
                    if (!validation.isValidDateTH(strDate)) {
                        alert("วันที่ไม่ถูกต้อง โปรดตรวจสอบ");
                        this.focus();
                    }
            }
        })
        $("#btnProcess").click(function (e) {
            e.preventDefault();
            if (confirm("กรูณายืนยันการบันทึกข้อมูล")) {
                //debugger
                var copID = $("#CoopID").val();
                var systemDateTH = conversion.DateInCE($("#SystemDateTH").val());
                var nextSystemDateTH = conversion.DateInCE($("#NextSystemDateTH").val());
                var nextWorkingDayTH = conversion.DateInCE($("#NextWorkingDayTH").val());
                var msg = "";
                if (systemDateTH == undefined || systemDateTH == '' || systemDateTH == null) {
                    //swal.fire("โปรดบันทึก", "สัญญาเงินกู้", "warning")
                    msg = "โปรดบันทึกวันที่";
                }
                if (!validation.isValidDateTH(nextSystemDateTH)) {
                    msg = "วันที่ไม่ถูกต้อง";
                }
                if (nextSystemDateTH == undefined || nextSystemDateTH == '' || nextSystemDateTH == null) {
                    //swal.fire("โปรดบันทึก", "สัญญาเงินกู้", "warning")
                    msg = "โปรดบันทึกวันที่";
                }
                if (!validation.isValidDateTH(nextSystemDateTH)) {
                    msg = "วันที่ไม่ถูกต้อง";
                }
                if (nextWorkingDayTH == undefined || nextWorkingDayTH == '' || nextWorkingDayTH == null) {
                    //swal.fire("โปรดบันทึก", "สัญญาเงินกู้", "warning")
                    msg = "โปรดบันทึกวันที่";
                }
                if (!validation.isValidDateTH(nextWorkingDayTH)) {
                    msg = "วันที่ไม่ถูกต้อง";
                }
                if (msg.length > 0) {
                    alert(" โปรดตรวจสอบ! \n" + msg);
                    return;
                }
                //debugger
                var aData = {
                    CoopID: $("#CoopID").val(),
                    SystemDateTH: $("#SystemDateTH").val(),
                    NextSystemDateTH: $("#NextSystemDateTH").val(),
                    NextWorkingDayTH: $("#NextWorkingDayTH").val()
                };
                //debugger
                $.ajax({
                    url: '/BatDayClose/TransferOutBatDayClose/',
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    dataType: 'json',
                    data: JSON.stringify(aData),
                    async: false,
                    cache: false,
                    beforeSend: function (x) {
                        if (x && x.overrideMimeType) {
                            x.overrideMimeType('application/json;charset=UTF-8');
                        }
                    },
                    success: function (data, status, xhr) {
                        if (status == 'success' && data != null && data[0] != null) {
                            if (data[0].Result && data[0].Message == 'Successful') {
                                //debugger
                                if (data[1] != null) {
                                    $("#CoopID").val(data[1].CoopID);
                                    //swal.fire("ข้อมูลสัญญาเงินกู้", "บันทึกข้อมูลสำเร็จแล้ว", "success");
                                    alert("บันทึกข้อมูลสำเร็จแล้ว")
                                    result = true;
                                }
                            }
                            else {
                                //swal.fire("Warning", data[0].Message, "warning");
                                alert(data[0].Message);
                                result = false;
                            }
                        } else {
                            //swal.fire("สัญญาเงินกู้", "ข้อมูลผิดพลาด บันทีกข้อมูลไม่สำเร็จ", "error");
                            alert("ข้อมูลผิดพลาด บันทีกข้อมูลไม่สำเร็จ");
                            result = false;
                        }
                    },
                    error: function (xhr, status, error) {
                        //swal.fire("มีข้อมูลผิดพลาด (ก่อนส่งปรับปรุงข้อมูล)", error, "error");
                        alert("มีข้อมูลผิดพลาด (ก่อนส่งปรับปรุงข้อมูล)");
                        result = false;
                    }
                });
            }
        });
    });
