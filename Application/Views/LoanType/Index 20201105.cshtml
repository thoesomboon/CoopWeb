                $("#BFBal").val("");
                $("#BFInt").val("");
                $("#BFCharge").val("");
                $("#AccInt").val("");
                $("#YTDAccInt").val("");
                $("#UnpayPrinciple").val("");
                $("#BFUnpayInt").val("");
                $("#UnpayInt").val("");
                $("#BFUnpayCharge").val("");
